    <dependencies>
        <dependency>
            <groupId>com.weiyi</groupId>
            <artifactId>wx.order.service</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.weiyi</groupId>
            <artifactId>wx.order.common</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <dependency>
